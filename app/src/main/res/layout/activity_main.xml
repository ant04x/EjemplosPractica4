<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="net.iessochoa.joseantoniolopez.ejemplospractica4.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spinner" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_array"
        android:contentDescription="Spinner que le pasamos los datos mediante un array de string creado desde código"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_conArrayString"
        android:contentDescription="Este spinner lo creamos con los datos creados en string.xml"/>

    <TextView
        android:text="ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:contentDescription="La siguiente listview le añadimos los datos por códgo y mediante el menu podemos añadir y eliminar elementos. Comprobaremos que si giramos el movil perdemos los datos si no se han guardado previamente. Para ello tienes que descomentar el las línea que te dice en mainActivity"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_Lista" />
</LinearLayout>
